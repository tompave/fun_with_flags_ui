<span>
  <form id="fwf-new-actor-form" action="<%= path(@conn, "/flags/#{url_safe(@flag.name)}/actors") %>" method="post" class="form-inline">
    <input type="hidden" name="_csrf_token" value="<%= @conn.assigns[:csrf_token] %>">
    <%= if assigns[:error_message] do %>
      <div class="input-group mr-2 has-danger fwf-wide-input">
        <div class="input-group-addon">actor ID</div>
        <input type="text" class="form-control form-control-danger" id="actor_id" name="actor_id" placeholder="e.g. user:123">
      </div>
    <% else %>
      <div class="input-group mr-2 fwf-wide-input">
        <div class="input-group-addon">actor ID</div>
        <input type="text" class="form-control" id="actor_id" name="actor_id" placeholder="e.g. user:123">
      </div>
    <% end %>

    <div class="d-flex align-items-center">
      <div class="form-check form-check-inline mb-0">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="enabled" id="actor-enabled-true" value="true"> enabled
        </label>
      </div>
      <div class="form-check form-check-inline mb-0">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="enabled" id="actor-enabled-false" value="false" checked> disabled
        </label>
      </div>

      <button type="submit" class="btn btn-sm btn-primary ml-3">Add</button>
    </div>
    <small class="form-text text-danger ml-3"><%= assigns[:error_message] %></small>
  </form>
</span>
